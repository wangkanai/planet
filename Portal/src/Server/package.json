{
	"name": "plant",
	"version": "1.0.0",
	"description": "Wangkanai Planet - A modern, extensible, and powerful CMS for .NET",
	"repository": {
		"type": "git",
		"url": "https://github.com/wangkanai/planet.git"
	},
	"private": true,
	"scripts": {
		"watch": "sass --watch wwwroot/scss/planet.scss:wwwroot/dist/planet.css",
		"scss": "sass wwwroot/scss/planet.scss:wwwroot/dist/planet.css",
		"minify": "postcss wwwroot/dist/planet.css --no-map --use cssnano --output wwwroot/dist/planet.min.css",
		"lib": "npm-run-all -p lib-*",
		"lib-tabler": "cpx \"node_modules/@tabler/core/**/*.*\" wwwroot/lib/tabler/",
		"lib-icons": "cpx \"node_modules/@tabler/icons/**/*.*\" wwwroot/lib/icons/",
		"lib-webfont": "cpx \"node_modules/@tabler/icons-webfont/**/*.*\" wwwroot/lib/webfont/",
		"clean": "npm-run-all -p clean-*",
		"clean-dist": "rimraf wwwroot/dist/",
		"clean-lib": "rimraf wwwroot/lib/",
		"build": "npm-run-all -s clean lib deploy",
		"deploy": "npm run lib && npm run scss && npm run minify"
	},
	"dependencies": {
		"@tabler/core": "^1.3.2",
		"@tabler/icons": "^3.34.0" ,
		"@tabler/icons-webfont": "^3.34.0"
	},
	"devDependencies": {
		"cpx": "^1.5.0",
		"cssnano": "^7.0.7",
		"nodemon": "^3.1.10",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^11.0.1",
		"rimraf": "^6.0.1",
		"sass": "^1.89.2"
	}
}
